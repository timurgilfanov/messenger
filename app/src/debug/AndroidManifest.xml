<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Debug notification permission for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Override the application class with debug version -->
    <application 
        android:name=".debug.DebugMessengerApplication"
        tools:ignore="MissingApplicationIcon"
        tools:replace="android:name">
        
        <activity
            android:name="timur.gilfanov.messenger.ChatListScreenTestActivity"
            android:exported="true" />
        <activity 
            android:name="timur.gilfanov.messenger.ChatScreenTestActivity"
            android:exported="true" />
        
        <!-- Debug Settings Activity -->
        <activity
            android:name=".debug.ui.DebugSettingsActivity"
            android:theme="@style/Theme.Messenger"
            android:exported="false"
            android:label="Debug Settings" />
    </application>
</manifest>